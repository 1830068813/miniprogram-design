{
  "name": "miniprogram-design",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "main": "index.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev:editor": "pnpm -C packages/editor dev",
    "dev:docs": "pnpm -C docs dev",
    "build:editor": "pnpm -C packages/editor build && pnpm -C packages/editor build --mode development",
    "build:hooks": "pnpm -C packages/hooks build",
    "release:editor": "cd packages/editor && bumpp --tag editor@ --commit --push",
    "release:core": "cd packages/core && bumpp --tag core@ --commit --push"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core"
      ]
    }
  },
  "devDependencies": {
    "@micro-zoe/micro-app": "1.0.0-alpha.10",
    "@sepveneto/eslint-config": "^0.6.0",
    "bumpp": "^9.1.0",
    "conventional-changelog": "^4.0.0",
    "conventional-changelog-cli": "^3.0.0",
    "eslint": "^8.32.0"
  }
}
